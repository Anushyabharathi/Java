package day4hw;
import java.util.*;
//if the input no is splited and the individual number is powered by  digitcount of the input
public class AmstrongNo {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("enter the number");
		int num=sc.nextInt();
		int onum=num;
		int temp=num;
		int count=0;
		while(temp!=0) 
		{
			count++;
			temp/=10;
		}
		int sum=0;
		temp=num;
		while(temp!=0) 
		{
			int num2=temp%10;
			int result=1;
			for (int i = 0; i < count; i++) 
			{
                result *= num2;
            }
			sum+=result;
			temp/=10;
		}
		if(sum==onum) 
		{
			System.out.println(onum+" is a Amstrong Number");
		}
		else 
		{
			System.out.println(onum+" is Not a Amstrong Number");
		}
	}
}


package day4hw;
import java.util.*;
public class Fibonanci {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int num=sc.nextInt();
		int a=0,b=1,count=0;
		System.out.println("fibonanci series");
		System.out.print(a+" ");
		System.out.print(b);
		for(int i=2;i<num;i++) 
		{
			int temp=a+b;
			System.out.print(" "+temp);
			a=b;
			b=temp;
		}
	}
}



package day4hw;
import java.util.*;
//Write a program to simulate the duel and determine the winner based on their output scores.
public class GcdMatch {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
        int g=sc.nextInt();
        int m=sc.nextInt();
        int t=sc.nextInt();
        int gcd=0;
        int gmin=(g<t)?g:t;
        int mmin=(m<t)?m:t;
            if(g==m)
            {     //both have equal scores
                System.out.println("It's a draw!");
            }
            else
            {
                for(int i=1;i<=gmin;i++)
                {
                    for(int j=1;j<=mmin;j++)
                    {
                        if(g%i==0 && t%i==0)
                        {                      //gokul's turn
                            gcd=i;             //gcd finding
                            t=t-gcd;           //sub the gcd from total score
                            if(t==0)
                            {
                                System.out.println("Winner: Gokul");
                            }
                        }
                        if(m%j==0 && t%j==0)
                        {                         //minor's turn
                            gcd=j;
                            t=t-gcd;
                            if(t==0)
                            {
                                System.out.println("Winner: Minor");
                            }
                        }
                    }
                }  
            }
	   }
}


