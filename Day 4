package Day4;
import java.util.*;
public class CountOfEven {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("enter the starting range");
		int num1=sc.nextInt();
		System.out.println("enter the ending range");
		int num2=sc.nextInt();
		int even=0;
		int odd=0;
		for(int i=num1;i<=num2;i++) 
    {
			if(i%2==0) 
      {
				even++;
			}
			else        //if(i%2!=0)
      {         
				odd++;
			}
		}
		System.out.println("There are "+even+" even numbers between the numbers "+num1+" and "+num2);
		System.out.println("There are "+odd+" odd numbers between the numbers "+num1+" and "+num2);
	}
}


package Day4;
import java.util.*;
//print the total sum as single digit
public class CountTheDigits {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("enter a number");
		int num=sc.nextInt();
		int count=0;
		while(num>9) 
    {  
			int sum=0;
			while(num>0) 
      {
			    int num1=num%10; //or num/=10   //one digit(sum)
			    sum+=num1;          
			    count++;           //   count++
			    num/=10;
			}
			num=sum;
		}
		System.out.println("The total sum of the digits: "+num);
	}
}


package Day4;
public class Even {
	public static void main(String[] args) {
		int num=5;
		for(int i=0;i<=num;i++) 
		{
			System.out.println(i++);
		}
		System.out.println("");
		System.out.println("Reverse");
		for(int i=10;i>=0;i--) 
		{
			System.out.println(i);
		}
		System.out.println("");
		System.out.println("Even Reverse");
		for(int i=10;i>=0;i--) 
		{
			System.out.println(i--);
		}
	}
}


