package Day3;
import java.util.*;
//simple if condition
public class Conditional {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("enter your age");
		int age=sc.nextInt();
		if(age>=18) {
			System.out.println("congrats! you are eligible to vote");		
		}
		else {
			System.out.println("sorry you are not eligible to vote");
		}
	}
}


package Day3;
import java.util.*;
public class Grade {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter your mark");
		int mark=sc.nextInt();
		System.out.println("Your grade is");
		if(mark>=90 && mark<=100) {
			System.out.println("A+");
		}
		else if(mark>=80 && mark<=89) {
			System.out.println("A");
		}
		else if(mark>=70 && mark<=79) {
			System.out.println("B");
		}
		else if(mark>=60 && mark<=69) {
			System.out.println("C");
		}
		else if(mark>=50 && mark<=59) {
			System.out.println("D");
		}
		else {
			System.out.println("Fail");
		}
	}
}


package Day3;
import java.util.*;
public class NestedIf {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter your age");
		int age=sc.nextInt();
		if(age>=18) {
			System.out.println("Eligible to vote");
			if(age>=24) {
				System.out.println("Eligible to canditate");
			}
			else {
				System.out.println("not eligible to vote");
			}
		}
		else {
			System.out.println("not eligible to vote");
		}
	}
}


package Day3;
import java.util.*;
public class SimpleIf {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter the number");
		int num=sc.nextInt();
		if(num%3==0 && num%5==0) {
			System.out.println("FizzBizz");
		}
		else if(num%5==0) {
			System.out.println("Bizz");
		}
		else if(num%3==0) {
			System.out.println("Fizz");
		}
	}
}


package Day3;
import java.util.*;
public class SwitchCase {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter a character in capital");
		char num=sc.nextLine().charAt(0);
		switch(num)
		{
		case 'P':{
			System.out.println("Python");
			break;
		}
		case 'J':{
			System.out.println("Java");
			break;
		}
		case 'C':{
			System.out.println("C");
			break;
		}
		case 'H':{
			System.out.println("HTML");
			break;
		}
		default:{
			System.out.println("Nothing");
		}
		}
	}
}



package Day3;
import java.util.*;
public class Weight{
	public   static void main(String[] args){
		Scanner sc=new Scanner(System.in);
		System.out.println("Ente the weight");
		int w=sc.nextInt();
		if(w>0 && w<=100){
			if(w%2==0){
				System.out.println("YES");
				int a=w/2;
				System.out.println(a+"-"+a);
			}
			else{
				System.out.println("NO");
			}
		}
		else{
			System.out.println("Invalid input");
		}
	}
}


package day3hw;
import java.util.*;
//Lucky numbers, according to the mystical school tradition, are those positive integers containing only the digits 4 and 7.
//Your mission, should you choose to accept it, is to unravel the mystery and determine if a given roll number belongs to the exclusive club of "almost lucky."
public class LuckyNo {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
        int num=sc.nextInt();
        if(num==47 || num==74 || num==477 || num==747 || num==774 || num==744 || num==474 ||
          num==447){
            System.out.println("YES");
        }
        else{
            System.out.println("NO");
        }
	}
}


package day3hw;
import java.util.*;
//find the cheapest way to travel for the month.
public class Tickets {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
	       int x=sc.nextInt();
	       int y=sc.nextInt();
	       Float s=sc.nextFloat();
	       Float r=sc.nextFloat(); 
	       Float l=sc.nextFloat();
	       if(s > r && (2 * s < r)){
	           System.out.println("Invalid Input");
	       }
	       else{
	           Float a = x * s;
	           Float b = y * r;
	           Float combo=a+b;
	           if(l<combo){
	               System.out.println("Monthly Pass");
	           }
	           else{
	               System.out.println("Solo Trail + Roundabout Ride");
	           }
	       }
	}
}





